<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ruomm.dao.UserInfoMapper">

	<resultMap id="userInfoMap" type="com.ruomm.dto.UserInfoDto">
			<result property="userId" column="USER_ID" jdbcType="VARCHAR"/>
			<result property="userName" column="USER_NAME" jdbcType="VARCHAR"/>
			<result property="pwd" column="PWD" jdbcType="VARCHAR"/>
	</resultMap>
	
	<insert id="insertUserInfo">
		<![CDATA[
		insert	into tbl_usre_info(USER_ID,USER_NAME,PWD)
		values (#{userInfoDto.userId},#{userInfoDto.userName,jdbcType=VARCHAR},#{userInfoDto.pwd,jdbcType=VARCHAR})
		]]>
	</insert>
	<select id="selectUserInfos" resultMap="userInfoMap">
		select * from tbl_usre_info 
		<where>
			<if test="userInfoDto.userId != null and userInfoDto.userId != ''">
					AND t.USER_ID LIKE CONCAT(CONCAT('%',#{userInfoDto.userId}),'%')
			</if>
		</where>
	</select>
	
</mapper>

